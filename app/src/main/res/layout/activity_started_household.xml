<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".started_household">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Started_Locality"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@drawable/ic_map_blue_16dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Locality:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Timestarted"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_access_time_blue_16dp"
                    android:text="Date:"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/startedDwelling"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Dwelling Number:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/HH_NO"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_group_blue_24dp"
                    android:gravity="center_vertical"
                    android:text="House Hold No:"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btnComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_done_all_black_24dp"
                    android:text="Complete"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_edit_blue_16dp"
                    android:text="Update HouseHold"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/superComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background_red"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentHead"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@drawable/ic_message_red_24dp"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:text="Comments from Supervisor"
                    android:textSize="16sp" />




                <LinearLayout
                    android:id="@+id/actionItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edit_text_background_red"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/Comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textColor="@color/red"
                        android:text=""

                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/RosterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background_custom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rosterHead"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:padding="3dp"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/WHITE"
                    android:text="Eligibility"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Roster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightBlue"
                android:layout_marginTop="0dp"
                android:divider="@drawable/spinner_item_divider"
                android:showDividers="middle"
                android:animateLayoutChanges="true"
                android:padding="5dp"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/hivHead"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_background_custom"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_HIV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:background="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/WHITE"
                    android:text="HIV Individuals"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/hiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightBlue"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                android:padding="5dp"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tbHead"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_background_custom"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_TB"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:textColor="@color/WHITE"
                    android:text="TB Individuals"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightBlue"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                android:padding="5dp"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>