<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".H08">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/H08Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"

        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/H08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="What is the main source of energy used for: COOKING"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/H08radio"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toBottomOf="@+id/H08Linear"
        tools:layout_editor_absoluteX="8dp">

        <ScrollView

            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/P02Navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291">

            <RadioGroup
                android:id="@+id/H08radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:textSize="16sp">

                <RadioButton
                    android:id="@+id/H08_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ElectricityMains" />

                <RadioButton
                    android:id="@+id/H08_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ElectricitySolar" />

                <RadioButton
                    android:id="@+id/H08_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Gas" />

                <RadioButton
                    android:id="@+id/H08_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Paraffin" />

                <RadioButton
                    android:id="@+id/H08_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/WoodOrCharcoal" />

                <RadioButton
                    android:id="@+id/H08_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Coal" />

                <RadioButton
                    android:id="@+id/H08_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/H08Other" />


                <EditText
                    android:id="@+id/H08_txtOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="other specify" />

            </RadioGroup>
        </ScrollView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/P02Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"

        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_arrow_back_blue_24dp"
            android:text="@string/previous" />

        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:drawableRight="@drawable/ic_arrow_forward_blue_24dp"
            android:text="@string/next" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>