<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/started_list_layout"
    android:layout_marginTop="10dp"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Started_Locality"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@drawable/ic_map_blue_16dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Locality:"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/Timestarted"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_access_time_blue_16dp"
                    android:text="Date:"
                    android:textSize="16sp" />




            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/startedDwelling"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Dwelling Number:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/HH_NO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_group_blue_24dp"
            android:gravity="center_vertical"
            android:text="House Hold No:"
            android:textSize="16sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/startedStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_access_time_blue_16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Next Vist:"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16sp" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

