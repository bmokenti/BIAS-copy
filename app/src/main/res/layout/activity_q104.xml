<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".q104">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/q104Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"

        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/q104"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="What is the highest level that you are currently doing/have completed?"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/q104radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ScrollView

            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"

            android:paddingTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/P05Navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291">


            <LinearLayout
                android:id="@+id/lineartype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q104type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Type of education?"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <AutoCompleteTextView
                                            android:id="@+id/autoTypeOfEducation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_weight="4"
                                            android:background="@drawable/edit_text_background"
                                            android:completionHintView="@layout/hint_completion_layout"
                                            android:dropDownSelector="@color/colorPrimaryDark"
                                            android:hint="Type of Education"
                                            android:maxLines="1"
                                            android:padding="3dp"
                                            android:paddingBottom="20dp"
                                            android:textSize="22sp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:layout_editor_absoluteY="152dp" />

                                        <Button
                                            android:id="@+id/btnClear"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_marginTop="0dp"
                                            android:layout_weight="0"
                                            android:drawableLeft="@drawable/ic_clear_blue_24dp"
                                            android:textSize="22sp"

                                            />

                                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <TextView
                    android:id="@+id/q104a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="a) Level of Education"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <LinearLayout
                    android:id="@+id/linearlevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                                        <AutoCompleteTextView
                                            android:id="@+id/autoLevelOfEducation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_weight="4"

                                            android:background="@drawable/edit_text_background"
                                            android:completionHintView="@layout/hint_completion_layout"
                                            android:dropDownSelector="@color/colorPrimaryDark"
                                            android:hint="LEVEL of Education"
                                            android:maxLines="1"
                                            android:padding="3dp"
                                            android:paddingBottom="20dp"
                                            android:textSize="22sp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:layout_editor_absoluteY="152dp" />

                                        <Button
                                            android:id="@+id/btnClear1"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_marginTop="0dp"
                                            android:layout_weight="0"
                                            android:drawableLeft="@drawable/ic_clear_blue_24dp"
                                            android:textSize="22sp"

                                            />

                                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <TextView
                    android:id="@+id/q104b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="b) Year"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                                     <LinearLayout
                                         android:id="@+id/linearyear"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">



                                         <AutoCompleteTextView
                                             android:id="@+id/autoYear"
                                             android:layout_width="150dp"
                                             android:layout_height="wrap_content"
                                             android:layout_alignParentTop="false"
                                             android:layout_centerHorizontal="true"
                                             android:layout_marginLeft="8dp"
                                             android:layout_marginEnd="8dp"
                                             android:layout_marginRight="8dp"
                                             android:layout_weight="4"

                                             android:background="@drawable/edit_text_background"
                                             android:completionHintView="@layout/hint_completion_layout"
                                             android:dropDownSelector="@color/colorPrimaryDark"
                                             android:hint="YEAR"
                                             android:maxLines="1"
                                             android:padding="3dp"
                                             android:paddingBottom="20dp"
                                             android:textSize="22sp"
                                             app:layout_constraintEnd_toEndOf="parent"
                                             app:layout_constraintStart_toStartOf="parent"
                                             tools:layout_editor_absoluteY="152dp" />

                                            <Button
                                                android:id="@+id/btnClear2"
                                                android:layout_width="48dp"
                                                android:layout_height="48dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_weight="0"
                                                android:drawableLeft="@drawable/ic_clear_blue_24dp"
                                                android:textSize="22sp"

                                                />

                                        </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/q104C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q104ctxt"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <LinearLayout
                    android:id="@+id/lineareducationfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txtq104c"
                        android:layout_width="282dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_background"
                        android:ellipsize="start"
                        android:ems="3"
                        android:gravity="center"
                        android:hint="Field of education"
                        android:inputType="text"
                        android:padding="3dp" />

                </LinearLayout>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/q104Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"

        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_arrow_back_blue_24dp"
            android:text="@string/previous" />

        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:drawableRight="@drawable/ic_arrow_forward_blue_24dp"
            android:text="@string/next" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>